{
    "name": "villa-microservice",
    "version": "1.0.0",
    "description": "Villa microservice with gRPC",
    "main": "index.js",
    "scripts": {
        "build": "npm run build:api && npm run build:villa",
        "build:api": "cd api-service && npm run build",
        "build:villa": "cd villa-service && npm run build",
        "dev:api": "cd api-service && npm run dev",
        "dev:villa": "cd villa-service && npm run dev"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "ts-node": "^10.9.0",
        "nodemon": "^3.0.0"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.9.0",
        "@grpc/proto-loader": "^0.7.0"
    }
}